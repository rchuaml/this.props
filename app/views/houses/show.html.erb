<div class="container w-75 p-3">
	<div class="row justify-content-md-center">
		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
				<%= image_tag @house.images.first,:class =>"d-block " %>
				</div>
				<% @house.images.each_with_index do |image,n| %>
				<%if n!=0 %>
				<div class="carousel-item">
				<%= image_tag image,:class =>"d-block " %>
				</div>
				<% end %>
				<% end %>
			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true" ></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>
</div>

	<div class="container w-75 p-3" style="background-color: #f4f6f9; border-radius: 10px; border: solid 1px #E87D2D;">
		<div class="row">
			<div class="col">
				<div class="heading">
					<p> <strong>Name:</strong> </p>
						</div>
					<p> <%= @house.name %> </p>
				</div>

			<div class="col">
				<div class="heading">
					<p> <strong>Location:</strong> </p>
				</div>
				<p> <%= @house.location %> </p>
			</div>
		</div>

		<div class="row">
			<div class="col">
				<div class="heading">
					<p> <strong>Price:</strong> </p>
				</div>
				<p> SGD$ <%= @house.price %></p>
			</div>

			<div class="col">
				<div class="heading">
					<p> <strong>Bedrooms:</strong> </p>
				</div>
				<p> <%= @house.bedrooms %> </p>
			</div>
		</div>

		<div class="row">
			<div class="col">
				<div class="heading">
					<p> <strong>Bathrooms:</strong> </p>
				</div>
				<p> <%= @house.bathrooms %> </p>
			</div>

			<div class="col">
				<div class="heading">
						<p> <strong>Floor area:</strong> </p>
				</div>
				<p> <%= @house.floor_area %> </p>
			</div>
		</div>

		<div class="row">
    	<div class="col">
    		<div class="heading">
  				<p> <strong>Furnishing:</strong> </p>
  			</div>
				<% if @house.furnishing == true %>
					<p>Furnished</p>
				<% else %>
					<p>Unfurnished</p>
				<% end %>
			</div>

			<div class="col">
				<div class="heading">
					<p> <strong>Floor levels:</strong> </p>
				</div>
				<p> <%= @house.floor_levels %> </p>
			</div>
		</div>

		<div class="row">
			<div class="col">
				<div class="heading">
					<p> <strong> Lease left: </strong> </p>
				</div>
				<p> <%= @house.lease_left %> </p>
			</div>
			<div class="col">
			</div>
		</div>

		<div class="row justify-content-md-center m-2">
			<div class="col-md-auto">
				<button type="button" class="btn btn-this-second">
					<%= link_to 'Add to Favorites', show_path(@house.id), method: :post %>
				</button>
			</div>
			<div class="col-md-auto">
				<button type="button" class="btn btn-this-second">
					<%= @sellerbuyerId == nil ? (link_to 'Message Seller', new_message_path(@house.id), method: :get) : (link_to 'Message Seller', message_path(@sellerbuyerId.id), method: :get) %>
				</button>
			</div>
			<div class="col-md-auto">
				<button type="button" class="btn btn-this-second">
					<%= link_to 'Email Seller', button_path(@house.id), method: :get %>
				</button>
			</div>
		</div>

		<div class="row justify-content-md-center m-1">
			<div class="col-md-auto">
				<%= link_to 'Edit', edit_house_path(@house) %> |
				<%= link_to "Delete", house_path(@house), method: :delete, data: { confirm: 'Are you sure you want to delete this house?' } %> |
				<%= link_to 'Back', root_path %>
			</div>
		</div>
	</div>

<script>
	document.querySelector("body > div > div.container.w-100.p-3 > div:nth-child(7) > div > form > input[type='submit']").className = "btn btn-this-primary";
	$('.carousel').carousel()
</script>